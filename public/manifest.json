{
  "manifest_version": 3,
  "name": "File Upload Detector",
  "version": "1.0",
  "description": "Detects file uploads and shows them in a popup",
  "permissions": ["webRequest", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
